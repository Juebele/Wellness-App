<body>

  <header>
  <nav>
    <div class="grid row text-center">
      <h1 class="col-8">Full-Snack</h1>
      <div class="col-4">
        {{#if loggedIn}}
        
        <button id="logout" class="btn-no-style">Logout</button>
        
        {{else}}
        <a href="/login">Log In</a>
        {{/if}}

         {{#if signUp}}
         <button>Meal Plan</button>
         {{else}}
         <a href="/signup">Sign Up</a>
         {{/if}}

         {{#if loggedIn}}
         <script src="/public/js/logout.js"></script>
         {{/if}}

  
      </div>
    </div>
  </nav>
  </header>
  {{{body}}}

<div class="grid row text-center" id="week-meals">
  <div>
    <h2>Meal Plan for the Week</h2>
  </div>

    <form class="container">
      <select id="daySelect">
        <option value="1">Monday</option>
        <option value="2">Tuesday</option>
        <option value="3">Wednesday</option>
        <option value="4">Thursday</option>
        <option value="5">Friday</option>
        <option value="6">Saturday</option>
        <option value="7">Sunday</option>
      </select>

  <div class="grid row text-center" id="breakfast">
    <div class="col">Breakfast</div>
    
<textarea class="col meal bfastText" id="bfastText">placeholder</textarea>
  
  
  </div>
  <div class="grid row text-center" id="lunch">
    <div class="col">Lunch</div>
    
    
<textarea class="col meal lunchText" id="lunchText">placeholder</textarea>
    
  </div>
  <div class="grid row text-center" id="dinner">
    <div class="col">Dinner</div>
    
  <textarea class="col meal dinnerText" id="dinnerText" >placeholder</textarea>

  </div>
  <button class="submit" type="button" value="confirm" onclick="submitMP(event)">Submit Day</button>
    </form>
 
<footer>
